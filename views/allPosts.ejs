<div class="row">
<ul class="breadcrumb">
  <li><a href="/">首页</a></li>
  <li class="active">帖子汇总</li>
</ul>
<% if(user) { %>
  <p class="pull-right"><a href="/say">发帖</a></p>
<% } %>
    <div class="col-md-9">
      <table style="margin-top:10px;" class="table table-condensed">
        <% posts.forEach(function(post, index) { %>

        <tr style="vertical-align:top" >
          <td style="width:20%"><img src="/images/user/<%=post.user.imgPath %>" style="width:50px;height:50px;"/></td>
            <td style="width:70%"><p style="line-height:25px;height:25px;"><a href="/postOne?id=<%= post.id %>&flag=1"><%= post.title %></a><br/>
          <small><%= post.user.name %></small>发表于<small><%= post.time %></small></p>
          </td>
          <td style="vertical-align:middle;width:10%;">
            <p><span class="label label-info"><%= post.pv %></span></p>
          </td>

        </tr>
        <%}) %>

        </table>
        <%- include pagination %>

      </div>
  </div>